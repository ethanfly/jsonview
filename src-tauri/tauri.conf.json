{
  "productName": "JSON Viewer",
  "version": "0.1.0",
  "identifier": "com.example.jsonviewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "JSON Viewer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "backgroundColor": "#0c0e14FF",
        "dragDropEnabled": true,
        "devtools": true,
        "visible": false,
        "skipTaskbar": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "useLocalToolsDir": true,
    "targets": [
      "app",
      "nsis",
      "dmg",
      "deb",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "fileAssociations": [
      {
        "ext": [
          "json"
        ],
        "name": "JSON File",
        "description": "JSON 数据文件",
        "mimeType": "application/json",
        "contentTypes": [
          "public.json"
        ]
      }
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true,
        "customLanguageFiles": {
          "SimpChinese": "./windows/nsis/SimpChinese.nsh"
        },
        "installerHooks": "./windows/hooks.nsh"
      }
    }
  }
}